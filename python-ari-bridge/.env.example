# OpenAI API Key (required)
OPENAI_API_KEY=sk-your-api-key-here

# OpenAI Model & Voice
OPENAI_MODEL=gpt-4o-mini-realtime-preview-2024-12-17
OPENAI_VOICE=shimmer

# Asterisk ARI Configuration
ARI_URL=http://localhost:8088
ARI_USER=voiceapp
ARI_PASSWORD=CHANGE_ME
ARI_APP=voice-agent

# RTP Configuration
RTP_BIND_HOST=127.0.0.1
RTP_PORT_START=30000
RTP_PORT_END=30100

# VAD Settings (for OpenAI server VAD)
VAD_THRESHOLD=0.35
VAD_PREFIX_PADDING_MS=400
VAD_SILENCE_DURATION_MS=800

# DSP Settings
VOLUME_BOOST=2.5
PRE_EMPHASIS_COEFF=0.97

# Warmup (silence sent at start to stabilize VAD)
WARMUP_SILENCE_MS=200

# Prometheus Metrics
ENABLE_METRICS=true
METRICS_PORT=9090

# Logging
LOG_LEVEL=INFO
